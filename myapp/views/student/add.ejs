  <body>
    <div class="container">
      <form action="/student/add" method="post" name="form1" id="register_form">
    <table class="table table-hover">
        <tr> 
            <td>Name</td>
            <td><input type="text" name="name" data-validation="required length custom" data-validation-regexp="^([A-z]+)$" data-validation-length="4-15" placeholder="Name" /></td>
        </tr>
        <tr> 
            <td>Phone</td>
            <td><input type="text" name="phone"data-validation="required length custom" data-validation-regexp="^[0-9]+$" data-validation-length="10"
             placeholder="Phone Number" /></td>
        </tr>
        <tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>
    </table>
</form>
    </div>
  </body>

  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.3.26/theme-default.min.css" type="text/css"/>
